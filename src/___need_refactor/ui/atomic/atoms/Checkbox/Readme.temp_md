<div>
  <CheckBox
    value="Label-4"
    type="radio"
    id="test1"
    name="label-4"
    checked={state.checkedId === 'test1'}
    onChange={() => {
      /*Change checked status*/
      setState({ checkedId: 'test1' });
    }}
  >
